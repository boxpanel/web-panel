{
  "name": "web-panel-lowspec",
  "version": "1.0.0",
  "description": "A lightweight web-based system administration panel optimized for low-spec servers",
  "main": "server/index.js",
  "scripts": {
    "start": "node --max-old-space-size=256 server/index.js",
    "start:pm2": "pm2 start ecosystem.lowspec.config.js",
    "dev": "NODE_OPTIONS='--max-old-space-size=256' nodemon server/index.js",
    "build:client": "cd client && GENERATE_SOURCEMAP=false npm run build",
    "install:production": "npm install --production --no-optional",
    "install:client": "cd client && npm install --production --no-optional",
    "install:all": "npm run install:production && npm run install:client",
    "cleanup": "npm prune --production && cd client && npm prune --production",
    "optimize": "npm run cleanup && npm run build:client",
    "test": "echo \"Tests disabled for low-spec version\" && exit 0"
  },
  "keywords": [
    "system-administration",
    "web-panel",
    "lightweight",
    "low-spec",
    "memory-optimized",
    "process-management",
    "file-management"
  ],
  "author": "Web Panel Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "multer": "^1.4.5-lts.1",
    "mime-types": "^2.1.35",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "dotenv": "^16.3.1",
    "sqlite3": "^5.1.6"
  },
  "optionalDependencies": {
    "morgan": "^1.10.0",
    "ws": "^8.14.2",
    "node-cron": "^3.0.3",
    "systeminformation": "^5.21.20"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "config": {
    "optimization": {
      "memory": true,
      "cpu": true,
      "disk": true
    },
    "features": {
      "realTimeMonitoring": false,
      "detailedLogging": false,
      "webSocket": false,
      "cronJobs": false,
      "systemInfo": false
    },
    "limits": {
      "maxMemory": "256MB",
      "maxFileSize": "10MB",
      "maxConcurrentConnections": 50,
      "cacheSize": 50
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/web-panel.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/web-panel/issues"
  },
  "homepage": "https://github.com/your-username/web-panel#readme",
  "os": [
    "linux",
    "darwin",
    "win32"
  ],
  "cpu": [
    "x64",
    "arm64"
  ]
}