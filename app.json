{
  "name": "Web Panel - System Administration Dashboard",
  "description": "A comprehensive web-based system administration panel with modern UI and secure authentication",
  "repository": "https://github.com/YOUR_USERNAME/web-panel",
  "logo": "https://raw.githubusercontent.com/YOUR_USERNAME/web-panel/main/client/public/favicon.ico",
  "keywords": [
    "web-panel",
    "system-administration",
    "dashboard",
    "monitoring",
    "file-manager",
    "process-manager",
    "react",
    "nodejs",
    "express"
  ],
  "image": "heroku/nodejs",
  "stack": "heroku-22",
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ],
  "env": {
    "NODE_ENV": {
      "description": "Node environment",
      "value": "production"
    },
    "JWT_SECRET": {
      "description": "JWT secret key for authentication",
      "generator": "secret"
    },
    "JWT_EXPIRES_IN": {
      "description": "JWT token expiration time",
      "value": "24h"
    },
    "BCRYPT_ROUNDS": {
      "description": "Bcrypt hashing rounds",
      "value": "12"
    },
    "RATE_LIMIT_WINDOW_MS": {
      "description": "Rate limiting window in milliseconds",
      "value": "900000"
    },
    "RATE_LIMIT_MAX_REQUESTS": {
      "description": "Maximum requests per window",
      "value": "100"
    },
    "MAX_FILE_SIZE": {
      "description": "Maximum file upload size in bytes",
      "value": "10485760"
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "basic"
    }
  },
  "addons": [],
  "scripts": {
    "postdeploy": "npm run build"
  },
  "environments": {
    "test": {
      "scripts": {
        "test": "npm test"
      }
    }
  }
}